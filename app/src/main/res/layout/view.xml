<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="3dp"
        android:backgroundTint="#373737"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ViewJudul"
                android:layout_width="270dp"
                android:layout_height="30dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Judul"
                android:textColor="#fff"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ViewIsi"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="isian isian idisn isian isian"
                android:textColor="#A1A1A1"
                android:textSize="13sp"
                android:layout_below="@id/ViewJudul"/>

            <TextView
                android:id="@+id/ViewKategori"
                android:layout_width="270dp"
                android:layout_height="30dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentBottom="true"
                android:textColor="#A1A1A1"
                android:text="Kategori"
                android:textSize="10sp"
                android:layout_below="@+id/ViewIsi"/>

            <ImageView
                android:id="@+id/ViewUpdate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/update"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"/>

            <ImageView
                android:id="@+id/ViewDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/delete"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>